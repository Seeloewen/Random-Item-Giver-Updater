<Window x:Name="wndMain" x:Class="Random_Item_Giver_Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_Item_Giver_Updater"
        mc:Ignorable="d"
        Title="Random Item Giver Updater
" Height="900" Width="1400" SizeChanged="Window_SizeChanged" Closing="wndMain_Closing">
    <Grid x:Name="grdWorkspace">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="93"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="stpSidebar" Background="#FF323232" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <StackPanel x:Name="stpHeader" Background="#FF212121" Grid.ColumnSpan="2">
            <Grid>
                <TextBlock x:Name="tblHeader" Text="Random Item Giver Updater" Width="788" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" FontWeight="SemiBold" Canvas.Left="96" Canvas.Top="13" Foreground="White" Margin="96,9,0,0"/>
                <TextBox x:Name="tbDatapack" Canvas.Left="772" Canvas.Top="19" Width="431" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="15" Background="#FF636363" Foreground="White" Margin="0,10,186,0"/>
                <Button x:Name="btnBrowseDatapack" Canvas.Left="1211" Canvas.Top="19" RenderTransformOrigin="0.631,0.127" HorizontalAlignment="Right" Height="22" Width="94" Content="Browse" Click="btnBrowseDatapack_Click" VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0,10,83,0"/>
                <Button x:Name="btnLoad" Content="Load" Canvas.Left="1314" Canvas.Top="19" Height="22" Width="64" HorizontalAlignment="Right" VerticalAlignment="Top" Click="btnLoad_Click" FontWeight="Bold" Margin="0,10,11,0"/>
                <Button x:Name="btnSave" Content="Save Loot Table" Width="167" Height="30" Canvas.Left="1102" Canvas.Top="50" HorizontalAlignment="Right" VerticalAlignment="Top" Click="btnSaveLootTable_Click" HorizontalContentAlignment="Left" Margin="0,44,450,0"/>
                <Button x:Name="btnAddItems" Content="Add Items" Width="130" Height="30" Canvas.Left="958" Canvas.Top="50" HorizontalAlignment="Right" VerticalAlignment="Top" Click="btnAddItem_Click" Background="#FFDDDDDD" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,44,308,0"/>
                <Image x:Name="imgHeader" Height="74" Canvas.Left="14" Canvas.Top="10" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Resources/imgIcon.png" Margin="10,10,0,0"/>
                <TextBlock x:Name="lblDatapack" Canvas.Left="629" TextWrapping="Wrap" Text="Selected Datapack:" Canvas.Top="18" FontSize="18" Foreground="White" HorizontalAlignment="Right" Margin="0,8,625,0" Height="24" VerticalAlignment="Top"/>
                <Button x:Name="btnDuplicateFinder" Content="Duplicate Finder" Width="170" Height="30" Canvas.Left="814" Canvas.Top="51" Click="btnAddItem_Click" Background="#FFDDDDDD" HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,45,125,0"/>
                <Button x:Name="btnAbout" Content="About" Width="102" Height="30" Canvas.Left="1247" Canvas.Top="51" Click="btnSaveLootTable_Click" HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="0,45,11,0"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
