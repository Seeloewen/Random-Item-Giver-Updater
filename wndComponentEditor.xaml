<Window x:Class="Random_Item_Giver_Updater.wndComponentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_Item_Giver_Updater"
        mc:Ignorable="d"
        Title="Edit Item Stack Component" Height="435" Width="683" Background="#FF323232" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="tblHeader" HorizontalAlignment="Left" Margin="18,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" FontWeight="SemiBold" Foreground="White"><Run Text="Editing Component of item {0}"/><Run Text=" "/></TextBlock>
        <TextBlock x:Name="tblDescription" HorizontalAlignment="Left" Margin="18,48,0,0" TextWrapping="Wrap" Text="When editing the Component of an item, make sure to use a valid format. Any syntax error will cause the loot table to no longer function." VerticalAlignment="Top" FontSize="16" Foreground="White" Width="613"/>
        <TextBox x:Name="tbComponent" HorizontalAlignment="Left" Margin="18,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="613" FontSize="16" Background="#FF636363" Foreground="White" Height="232" AcceptsReturn="True"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="18,351,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.555,0.202" Height="30" Width="195" FontSize="16" Click="btnCancel_Click"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="436,351,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.555,0.202" Height="30" Width="195" FontSize="16" Click="btnSave_Click"/>
        <Button x:Name="btnDeleteComponent" Content="Delete Component" HorizontalAlignment="Left" Margin="228,351,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.555,0.202" Height="30" Width="193" FontSize="16" Click="btnDeleteComponent_Click"/>

    </Grid>
</Window>
