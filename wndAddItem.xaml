        <TextBlock HorizontalAlignment="Center" Margin="0,247,0,0" TextWrapping="Wrap" Text="Prefix                                     Name                                                               NBT" VerticalAlignment="Top" Width="548" Height="18"/>

    </Grid>
</Window>
